{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@azure/functions"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["functions/**/*.ts", "shared/**/*.ts", "smoke/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

