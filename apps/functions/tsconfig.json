{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "types": ["@azure/functions"],
    "lib": ["ES2022", "DOM"]
  },
  "include": ["index.ts", "functions/**/*.ts", "shared/**/*.ts", "smoke/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

