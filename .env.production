# Production Environment Variables for Azure Deployment
# Copy this to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-production-key-here
EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEXT_MODEL=gpt-5-mini

# Pinecone Configuration
PINECONE_API_KEY=pcsk_your-production-key-here
PINECONE_INDEX_HOST=https://emails-xxxxx.svc.aped-xxxx-xxxx.pinecone.io
PINECONE_INDEX_NAME=emails
PINECONE_SPARSE_INDEX_NAME=emails-sparse

# Nylas Email API
NYLAS_API_KEY=nyk_v0_your-production-key-here
NYLAS_GRANT_ID=your-production-grant-id-here
NYLAS_BASE=https://api.us.nylas.com/v3
NYLAS_WEBHOOK_SECRET=your-webhook-secret-here

# Azure Service Bus (will be auto-configured by deploy script)
# SERVICEBUS_CONNECTION=Endpoint=sb://...
SERVICEBUS_NAMESPACE=sb-email-agent-xxxx
SB_QUEUE_BACKFILL=nylas-backfill

# Delta Sync Configuration
DELTA_DEFAULT_MONTHS=1
DELTA_MAX=10000
DELTA_TIMER_SCHEDULE=0 0 * * * *
DELTA_TIMER_RUN_ON_STARTUP=0

# Priority Email Processing (optional)
PRIORITY_HINT_SENDERS=ceo@example.com,finance@example.com
PRIORITY_HINT_DOMAINS=partner.org,vendor.com
# PRIORITY_HINT_KEYWORDS=invoice,security alert,breach
# PRIORITY_MAP_CHUNK=8
# PRIORITY_MODEL=gpt-5-mini

# Azure Infrastructure Names (optional - override defaults)
# FUNCTION_APP_NAME=func-email-agent-custom
# KEYVAULT_NAME=kv-email-agent-custom
# STORAGE_ACCOUNT_NAME=stemailcustom

# Frontend URLs (for production builds)
VITE_FUNCTIONS_BASE_URL=https://func-email-agent-xxxx.azurewebsites.net
VITE_API_BASE=https://func-email-agent-xxxx.azurewebsites.net
